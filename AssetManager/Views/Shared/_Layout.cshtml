<!DOCTYPE html>
@using BasicResources = AssetManager.Resources.BasicResources
﻿
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>

    @Scripts.Render("~/bundles/base")
        
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDfMlZQ_3qNhg2Sr8eWgRhtuK7nRKKnGzY&sensor=false"></script>

    @Styles.Render("~/Content/styles")
    @Scripts.Render("~/bundles/vms")
    @Scripts.Render("~/bundles/charting")
    @Scripts.Render("~/bundles/tech")

    <style type="text/css">
        body
        {
            padding-top: 60px;
        }
    </style>
    @Html.Partial("_Resources")
</head>
<body>
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>

                <a class="brand" href="/">@BasicResources.PropertyManagement</a>

                <div class="nav-collapse">
                    <ul class="nav">
                        <li class="active">@Html.ActionLink("Home", "Index", "Home")</li>
                        @if(Request.IsAuthenticated){
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Change property<b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <!-- ko foreach: assets -->
                                <li>
                                    <a href="#">
                                        <div data-bind='text: name, click: select' style="font-weight: bold"></div>
                                    </a>
                                </li>
                                <!-- /ko -->
                            </ul>
                        </li>   
                        <li><a href="#" data-bind="click:newAsset">@BasicResources.NewProperty</a></li>
                        }
                    </ul>
                    <ul class="nav pull-right">
                        <li class="divider"></li>@if (Request.IsAuthenticated){
                            <li class="dropdown"><a class="dropdown-toggle" data-toggle="dropdown" href="#">Logged as: Tester<b class="caret"></b></a><ul class="dropdown-menu">
                                <li><a href="#">Profile</a></li>
                                <li><a href="/Home/Account/LogOff">Sign Out</a></li>
                            </ul>
                            </li>
                        }else{<li><a href="/Home/Account/LogOn">Log On</a></li>}
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        @RenderBody()
    </div>
</body>
</html>
